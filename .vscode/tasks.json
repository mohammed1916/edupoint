{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Run FastAPI backend",
        "type": "shell",
        "command": "uvicorn gemma_api:app --reload",
        "group": "build",
        "options": {
            "cwd": "${workspaceFolder}/backend"
        },
        "presentation": {
            "panel": "new"
        }
        },
        {
        "label": "Run frontend",
        "type": "shell",
        "command": "npm run dev",
        "group": "build",
        "options": {
            "cwd": "${workspaceFolder}/frontend",
        },
        "presentation": {
            "panel": "new"
        }
        }
    ]
}
